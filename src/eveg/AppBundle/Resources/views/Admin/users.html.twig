{# src/eveg/AppBundle/Resources/views/Admin/users.html.twig #}

{% extends "evegAppBundle:Admin:layout.html.twig" %}

{% block title %}
	Gestion des utilisateurs |
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}

	<div class="row whiteRow">
		
		{# Flashbags #}
		{% for type, messages in app.session.flashBag.all %}
		    {% for message in messages %}
		        {%if type == 'error'%} {% set type = 'danger' %} {%endif%}
		        <div class="alert alert-{{ type }} alert-dismissible">
		        	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		            {{ message|raw }}
		        </div>
		    {% endfor %}
		{% endfor %}

		<div class="jumbotron admin">
			<h1>Gestion des utilisateurs</h1>
		</div>
		<div class="col-md-12">
			<table class="table table-striped">
 				{# {{ dump(users) }} #}
				<tr class="info">
					<th><span class="glyphicon glyphicon glyphicon-off" aria-hidden="true"></span></th>
					<th>Nom</th>
					<th>Score</th>
					<th>Mail</th>
					<th>Newsletter</th>
					<th>Depuis le</th>
					<th>Dernière conn.</th>
					<th>Rôles</th>
					<th></th>
					<th></th>
				</tr>
 				{% for user in users %}
 					<tr>
 						<td>
 							{% if user.enabled == true %}
 								<span class="glyphicon glyphicon glyphicon-ok" aria-hidden="true">
 							{% else %}
 								<span class="glyphicon glyphicon glyphicon-remove" aria-hidden="true">
 							{% endif %}
 						</td>
 						<td>{{ user.username }}</td>
 						<td>{{ user.score }}</td>
 						<td>{{ user.email }}</td>
 						<td>{% if user.newsletter == true %}
 								<i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
 							{% endif %}
 						</td>
 						<td>A ajouter à l'entité</td>
 						<td>{% if user.lastLogin is not null %} {{ user.lastLogin.date }} {% endif %}</td>
 						<td>
 							{% for role in user.roles %}
 								{{ role }}
 								{% if not loop.last %}<br />{% endif %}
 							{% endfor %}
 						</td>
 						<td>
 							<a href="{{ path('eveg_admin_edit_user', {'id' : user.id}) }}">
 								<button type="button" class="btn btn-primary btn-xs">
 									Modifier
 								</button>
 							</a>
 						</td>
 						<td>
 							<a href="{{ path('eveg_admin_delete_user', {'id' : user.id}) }}">
 								<button type="button" class="btn btn-danger btn-xs">
 									Supprimer
	 							</button>
	 						</a>
 						</td>
 					</tr>
 				{% endfor %}
			</table>
		</div> <!-- ./col-md-12 -->

	</div> <!-- ./row -->

{% endblock %}

{% block javascript %}
	{{ parent() }}
{% endblock %}