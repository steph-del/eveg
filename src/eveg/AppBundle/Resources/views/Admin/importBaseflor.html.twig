{# app/Resources/views/Admin/importBaseflor.html.twig #}

{% extends "evegAppBundle:Admin:layout.html.twig" %}

{% block title %} Importer baseflor | {{ parent() }} {% endblock %}

{% block body %}

	{{ parent() }}

	<div class="row">
		<div class="col-md-12">
			<div class="jumbotron admin">
				<h1>Importer baseflor</h1>
			</div>
			
			<div class="panel panel-warning">
				<div class="panel-heading">
					<h3 class="panel-title">Attention</h3>
				</div>
				<div class="panel-body">
					Cette procédure écrase toutes les données existantes<br />
					Le format requis en entrée<br />
					- est un .csv, séparateur point-virgule (;)<br />
					- est codé en UTF8<br />
					- les retours à la ligne (Line ending) sont encodés selon le système Unix (LF)
				</div>
			</div>

			<form action="{{ path('eveg_admin_import_baseflor') }}" method="post" {{ form_enctype(form) }}>
				
			    {{ form_widget(form) }}
			    <input type="submit" />
			</form>

		</div>


	</div>


{% endblock %}
