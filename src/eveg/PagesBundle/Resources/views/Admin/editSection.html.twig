{# src/eveg/PagesBundle/Resources/views/Admin/editSection.html.twig #}

{% extends "evegPagesBundle:Admin:index.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block pageContent %}
	<h2>Editer la section "{{ section.titleFr }}"</h2>

	<form class="form-inline form-page" action="{{ path('eveg_pages_sections_admin_edit', {'id': section.id}) }}" method="post">
		<div class="form-group">
			{{ form_label(form.titleFr)}}
			{{ form_widget(form.titleFr)}}
		</div>

		<div class="form-group">
			{{ form_label(form.menuTitleFr)}}
			{{ form_widget(form.menuTitleFr)}}
		</div>

		<div class="form-group">
			{{ form_label(form.listOrder)}}
			{{ form_widget(form.listOrder)}}
		</div>

		<hr />

		<div class="">
			{{ form_label(form.contentFr)}}
			{{ form_widget(form.contentFr)}}
		</div>

		<hr />
		<br />
		<div class="form-group">
			{{ form_label(form.active)}}
			{{ form_widget(form.active)}}
		</div>
		<br /><br />
		<div class="text-center">
			<div class="form-group">
				{{ form_label(form.save)}}
				{{ form_widget(form.save)}}
				{#<a href="{{ path('eveg_pages_admin_preview_fr', {'id': page.id}) }}" target="_blank">
					<div class="btn btn-default form-control">
						Prévisualiser (fr)
					</div>
				</a>
				<a href="{{ path('eveg_pages_admin_preview_en', {'id': page.id}) }}" target="_blank">
					<div class="btn btn-default form-control">
						Prévisualiser (en)
					</div>
				</a>#}
			</div>
		</div>
		
		{{ form_rest(form) }}

	</form>

{% endblock %}

{% block javascript %}
	{{ parent() }}
	
{% endblock %}