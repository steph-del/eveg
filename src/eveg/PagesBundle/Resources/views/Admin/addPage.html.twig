{# src/eveg/PagesBundle/Resources/views/Admin/addPage.html.twig #}

{% extends "evegPagesBundle:Admin:index.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block pageContent %}
	<h2>Ajouter une page</h2>
	<form class="form-inline form-page" action="{{ path('eveg_pages_admin_add') }}" method="post">
		<div class="form-group">
			{{ form_label(form.titleFr)}}
			{{ form_widget(form.titleFr)}}
			{{ form_label(form.titleEn)}}
			{{ form_widget(form.titleEn)}}
		</div>

		<div class="form-group">
			{{ form_label(form.menuTitleFr)}}
			{{ form_widget(form.menuTitleFr)}}
			{{ form_label(form.menuTitleEn)}}
			{{ form_widget(form.menuTitleEn)}}
		</div>

		<div class="form-group">
			{{ form_label(form.listOrder)}}
			{{ form_widget(form.listOrder)}}
		</div>

		<hr />

		<div class="">
			{{ form_label(form.contentFr)}}
			{{ form_widget(form.contentFr)}}
		</div>
		<br /><br />
		<div class="">
			{{ form_label(form.contentEn)}}
			{{ form_widget(form.contentEn)}}
		</div>

		<hr />
		<br />
		<div class="form-group">
			{{ form_label(form.published)}}
			{{ form_widget(form.published)}}
		</div>

		{{ form_rest(form) }}

	</form>

	{{ tinymce_init({
		theme: {'simple':{'height': 500 }},
		toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
		automatic_uploads: true,
		images_upload_base_path: '/uploads/img/pages'
	}) }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	
{% endblock %}